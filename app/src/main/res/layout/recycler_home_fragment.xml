<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp">
        <ImageView
            android:id="@+id/productBanner"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:background="@drawable/product_banner_bg"/>
        <TextView
            android:id="@+id/productBannerFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:background="@drawable/product_banner_flag_new"
            android:textColor="@color/white"
            android:text="@string/new_text"
            android:textStyle="bold"
            android:textSize="11sp"/>
        <ImageButton
            android:id="@+id/favouriteBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="166dp"
            android:background="@drawable/product_heart_btn"
            android:backgroundTint="@color/Dark"
            android:scaleType="fitCenter"
            android:src="@mipmap/favourite_shape"
            android:contentDescription="@string/favourites" />
        <RatingBar
            android:id="@+id/productRating"
            android:layout_width="80dp"
            android:layout_height="14dp"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="3.5"
            android:secondaryProgressTint="@color/Yellow"
            android:progressTint="@color/Yellow"
            style="?android:attr/ratingBarStyleSmall"

            app:layout_constraintTop_toBottomOf="@+id/productBanner"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="7dp" />
        <TextView
            android:id="@+id/productRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/productRating"
            app:layout_constraintTop_toBottomOf="@id/productBanner"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/Gray"
            android:textFontWeight="200"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/productBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/productRating"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            android:textColor="@color/Gray"
            android:textFontWeight="200"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/productBrand"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/productOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/productName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp"
            android:visibility="invisible"
            android:textColor="@color/Gray"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/productNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/productName"
            app:layout_constraintLeft_toRightOf="@+id/productOldPrice"
            android:layout_marginTop="3dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/Primary"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>